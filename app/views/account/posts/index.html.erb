<div class="col-md-12">

  <h2 class="text-center"> 我的评论 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 内容 </th>
        <th> 电影 </th>
        <th> 更新时间 </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= post.content %> </td>
        <td> <%= post.movie.title %></td>
        <td> <%= post.updated_at %></td>
        <td> <%= link_to('Edit',edit_movie_post_path(post.movie,post), class:"btn btn-default btn-xs") %></td>
        <td> <%= link_to('Dlete',movie_post_path(post.movie,post),method: :delete, data:
        { confirm: 'Are you sure?'}, class: "btn btn-default btn-xs") %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
