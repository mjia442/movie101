<div class="col-md-12">
  <h2 class="text-center">我的电影 </h2>

  <table class="table">
  <thead>
     <tr>
        <th> # </th>
        <th> Title </th>
        <th> Descripton </th>
        <th> Post Count </th>
        <th> Last Update </th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
    <tr>
      <td> # </td>
      <td> <%= link_to(movie.title, movie_path(movie)) %></td>
      <td> <%= movie.description %></td>
      <td> <%= movie.posts.count %></td>
      <td> <%= movie.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
