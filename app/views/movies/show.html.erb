<div class = "col-md-12">
  <div class="movie">
    <%= link_to("发表评论", new_movie_post_path(@movie),class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @movie.user %>
    <%= link_to("Edit",edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>
</div>
